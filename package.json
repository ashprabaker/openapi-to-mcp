{
  "name": "openapi-to-mcp",
  "version": "1.0.0",
  "description": "CLI tool to convert OpenAPI specs to MCP servers",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "openapi-to-mcp": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli/index.js",
    "dev": "ts-node --esm src/cli/index.ts",
