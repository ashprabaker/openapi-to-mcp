    "axios": "^1.6.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "figlet": "^1.7.0",
    "form-data": "^4.0.2",
    "js-yaml": "^4.1.0",
    "openapi-types": "^12.1.3",
    "ora": "^6.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/jest": "^29.5.10",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
