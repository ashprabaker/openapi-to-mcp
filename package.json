    "server": "node dist/cli/index.js --no-ui",
    "test": "jest"
  },
  "keywords": [
    "openapi",
    "mcp",
    "cli",
    "model-context-protocol",
    "converter"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
